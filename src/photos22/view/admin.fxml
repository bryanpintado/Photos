<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="photos22.controller.AdminController"
      spacing="10" alignment="CENTER">

    <Label text="Admin Panel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <ListView fx:id="userListView" prefHeight="200" prefWidth="300" />

    <HBox spacing="10">
        <Button text="Create User" onAction="#handleCreateUser" />
        <Button text="Delete User" onAction="#handleDeleteUser" />
        <Button text="Logout" onAction="#handleLogout" />
    </HBox>
</VBox>